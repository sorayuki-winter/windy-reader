<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <FrameLayout
        android:id="@+id/bg0"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/shelf_book_bg" />

    <FrameLayout
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/shelfBookBg0"
        app:layout_constraintTop_toBottomOf="@id/bg0" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:contentDescription="@string/content_dcp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/cover"
        android:translationZ="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/shelf_it_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/bookTitle"
        app:layout_constraintTop_toBottomOf="@id/bg1" />

</android.support.constraint.ConstraintLayout>